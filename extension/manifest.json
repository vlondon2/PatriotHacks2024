{
  "manifest_version": 3,
  "name": "Byte-Sized Terms",
  "version": "1.0",
  "description": "Automatically simplifies complicated Terms & Conditions.",
  "action": {
      "default_popup": "popup.html",
      "default_icon":  "pthackslogo.png"
  },
  "icons": {
      "128": "pthackslogo.png"
  },
  "permissions": [
      "activeTab", 
      "tabs", 
      "notifications", 
      "storage",
      "scripting"
  ],
  "host_permissions": [
      "https://www.disneyplus.com/legal/*",
      "https://start.duckduckgo.com/terms",
      "https://www.startpage.com/en/privacy-policy/",
      "https://www.paypal.com/us/legalhub/useragreement-full"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.disneyplus.com/legal/*",
        "https://start.duckduckgo.com/terms",
        "https://www.startpage.com/en/privacy-policy/",
        "https://www.paypal.com/us/legalhub/useragreement-full"
      ],
      "js": ["contentScript.js"]
    }
  ]
}
